@page "/generators/cpf"
@page "/generators/cnpj"
@layout MainLayout
@inherits ComponentBase
@inject NavigationManager _navigationManager
@inject IJSRuntime JSRuntime

<RadzenPanel>
    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center">
        <RadzenStack>
            <RadzenText TextStyle="TextStyle.DisplayH6" class="m-auto">
                Gerador de @_textLabel
            </RadzenText>
            <RadzenStack Orientation="Orientation.Horizontal">
                <RadzenMask @bind-Value=@_value Mask="@_mask" Style="width: 200px;" Disabled="true" />
                <RadzenButton Text="Copiar" Click="OnClickButtonCopy" />
            </RadzenStack>
            <RadzenButton Click=OnClickButtonGenerate Style="width: 125px;" class="m-auto">
                Gerar @_textLabel
            </RadzenButton>
        </RadzenStack>
    </RadzenStack>
</RadzenPanel>