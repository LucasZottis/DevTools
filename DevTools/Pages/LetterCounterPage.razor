@page "/utilities/letter-counter"
@layout MainLayout
@inherits ComponentBase

<RadzenPanel>
    <RadzenText Text="Insira o texto aqui:" TextStyle="TextStyle.H6" />
    <RadzenTextArea @oninput=OnInputTextArea class="w-100" Style="height: 450px;" />

    <RadzenText Text="Informe o valor procurado:" TextStyle="TextStyle.H6" class="mt-2" />
    <RadzenTextBox @oninput=OnInputEspecialCharacter MaxLength="1" class="mb-3" />

    <RadzenText TextStyle="TextStyle.H6">
        Caracteres: @_charactersAmount
    </RadzenText>
    <RadzenText TextStyle="TextStyle.H6">
        Caracteres sem espaço: @_charactersWithoutSpaceAmount
    </RadzenText>
    <RadzenText TextStyle="TextStyle.H6">
        Espaços: @_spacesAmaount
    </RadzenText>
    <RadzenText TextStyle="TextStyle.H6">
        Vogais: @_vowelsAmount
    </RadzenText>
    <RadzenText TextStyle="TextStyle.H6">
        Números: @_numberAmount
    </RadzenText>
    <RadzenText TextStyle="TextStyle.H6">
        Palavras: @_wordAmount
    </RadzenText>
    <RadzenText TextStyle="TextStyle.H6">
        Frases: @_phraseAmount
    </RadzenText>
    <RadzenText TextStyle="TextStyle.H6">
        Linhas: @_lineAmount
    </RadzenText>
    <RadzenText TextStyle="TextStyle.H6" class="my-2">
        Valor procurado: @_especialCharacterAmount
    </RadzenText>
</RadzenPanel>