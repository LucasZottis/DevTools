@page "/utilities/crypt"
@inherits BasePage

<RadzenPanel>
    <RadzenRow class="rz-mb-4">
        <RadzenColumn>
            <RadzenStack Gap="0">
                <RadzenText Text="Chave"/>
                <RadzenTextBox @bind-Value=_model.Key />
            </RadzenStack>
        </RadzenColumn>
        <RadzenColumn>
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.End" Style="height: 100%">
                <RadzenButton Text="Encriptar" Click="OnClickEncryptButton" />
                <RadzenButton Text="Descriptar" Click="OnClickDecryptButton" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
        <RadzenColumn>
            <RadzenStack Gap="0">
                <RadzenText Text="Criptografado" />
                <RadzenTextArea Style="height: 450px;" @bind-Value=_encryptedText class="w-100" />
            </RadzenStack>
        </RadzenColumn>
        <RadzenColumn>
            <RadzenStack Gap="0">
                <RadzenText Text="Decriptografado" />
                <RadzenTextArea Style="height: 450px;" @bind-Value=_plainText class="w-100" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
</RadzenPanel>